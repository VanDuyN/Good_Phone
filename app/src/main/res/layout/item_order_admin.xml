<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:id="@+id/relativeLayout_Payment"
    android:background="@drawable/line_grey_light">
    <LinearLayout
        android:id="@+id/status_item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/name_item_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặng Phương"
            android:textStyle="bold"
            android:textColor="@color/black_700"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:text="Đang giao"
            android:textColor="@color/green_dark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_product_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_item_order"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_Product_Payment"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.15"
            android:background="@drawable/line_grey_light"/>
        <LinearLayout
            android:id="@+id/infoItemPayment"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_Name_Product_Payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:text="--"
                android:textColor="@color/black_700"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="none"/>
            <TextView
                android:id="@+id/tv_Price_Product_Payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="700"
                android:textSize="16dp"
                android:textColor="@color/black_700"
                android:text="--"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="end">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="x"/>
                <TextView
                    android:id="@+id/tv_Quantity_Product_Payment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlv_price_item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_product_order"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/amount_product_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="13dp"
            android:text="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/amount_product_item_order"
            android:text="sản phẩm"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/total_price_item_order"
            android:text="Thành tiền: "
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_800"/>
        <TextView
            android:id="@+id/total_price_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="5 000 000đ"
            android:textSize="16dp"
            android:textColor="@color/green_dark"            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/rlv_price_item_order">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/line_grey_light"
            android:text="Xem chi tiết"
            android:textColor="@color/black_600"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_line_green"
            android:text="Huỷ đơn"
            android:textAllCaps="false"
            android:textColor="@color/green_dark"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_line_green"
            android:text="Xác nhận"
            android:textColor="@color/green_dark"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>