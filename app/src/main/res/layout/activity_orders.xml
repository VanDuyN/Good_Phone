<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userOder"
    android:background="@color/black_200"
    tools:context=".Orders">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đơn hàng đã đặt"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="27dp" />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/search_view_other"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:textSize="18dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/linearLayout"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_Waiting_for_delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="2dp">
            <TextView
                android:id="@+id/tv_Waiting_for_delivery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Chờ giao hàng"
                android:textSize="18dp"
                android:textColor="@color/green_dark"/>
            <View
                android:id="@+id/v_Waiting_for_delivery"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green_dark"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_delivered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="2dp">
            <TextView
                android:id="@+id/tv_delivered"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Đã giao hàng"
                android:textSize="18dp"
                android:textColor="@color/black_800"/>
            <View
                android:id="@+id/v_delivered"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_800"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Đã hủy"
                android:textSize="18dp"
                android:textColor="@color/black_800"/>
            <View
                android:id="@+id/v_cancel"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_800"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_Other"
        android:layout_above="@id/navigation_bar"
        android:layout_below="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/navigation_bar">
    </FrameLayout>
</RelativeLayout>