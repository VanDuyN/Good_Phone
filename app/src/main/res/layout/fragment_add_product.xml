<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.Add_Product"
    android:id="@+id/add_Product_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg_line_green"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:layout_height="10dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:text="Thêm sản phẩm"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:background="@drawable/shape_green_dark_radiustop"
        android:backgroundTint="@color/green_dark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Thông tin cơ bản"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Tên sản phẩm" />

                        <EditText
                            android:id="@+id/edt_Add_Name_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Hãng" />

                        <EditText
                            android:id="@+id/edt_Add_Production_Company_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiusbottom">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Giá" />

                        <EditText
                            android:id="@+id/edt_Add_Price_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Số lượng" />

                        <EditText
                            android:id="@+id/edt_Add_Quantity_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:background="@drawable/shape_green_light_radiusbottom">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Ảnh" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/btn_Add_Image_Product"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_margin="1dp"
                                android:scaleType="fitCenter"
                                android:backgroundTint="@color/green_light"
                                android:background="@color/green_light"
                                android:src="@drawable/add_img" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Màn hình"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Kích thước màn hình" />

                        <EditText
                            android:id="@+id/edt_Add_Screen_Size_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Công nghệ màn hình" />

                        <EditText
                            android:id="@+id/edt_Add_Screen_Technology_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:background="@drawable/shape_green_light_radiusbottom">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Tính năng màn hình" />

                        <EditText
                            android:id="@+id/edt_Add_Screen_Feature_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Camera sau"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Camera sau" />

                        <EditText
                            android:id="@+id/edt_Add_Rear_Camera_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Quay video" />

                        <EditText
                            android:id="@+id/edt_Add_Video_Rear_Camera_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Camera trước"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Camera trước" />

                        <EditText
                            android:id="@+id/edt_Add_Front_Camera_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Quay video trước" />

                        <EditText
                            android:id="@+id/edt_Add_Video_Front_Camera_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Vi xử lý &amp; đồ họa"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow android:background="@drawable/shape_green_light">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Chipset" />

                        <EditText
                            android:id="@+id/edt_Add_Chipset_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="RAM &amp; Lưu trữ"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Dung Lượng\nRAM" />

                        <EditText
                            android:id="@+id/edt_Add_Ram_Product"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:paddingLeft="3dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Bộ nhớ trong" />

                        <EditText
                            android:id="@+id/edt_Add_Rom_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Pin &amp; Công nghệ sạc"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Pin" />

                        <EditText
                            android:id="@+id/edt_Add_Pin_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Công nghệ sạc" />

                        <EditText
                            android:id="@+id/edt_Add_Charger_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Giao tiếp &amp; Kết nối"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Hệ điều hành" />

                        <EditText
                            android:id="@+id/edt_Add_Operating_System_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Hỗ trợ mạng" />

                        <EditText
                            android:id="@+id/edt_Add_Network_Support_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"

                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Wifi" />

                        <EditText
                            android:id="@+id/edt_Add_Wifi_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Bluetooth" />

                        <EditText
                            android:id="@+id/edt_Add_Bluetooth_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow android:background="@drawable/shape_green_light_radiusbottom">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="GPS" />

                        <EditText
                            android:id="@+id/edt_Add_GPS_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Thông tin khác"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_grey_light">

                    <TableRow
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape_green_light_radiustop">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Chỉ số kháng nước, bụi" />

                        <EditText
                            android:id="@+id/edt_Add_Waterproof_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingLeft="3dp"
                            android:text="Công nghệ âm thanh" />

                        <EditText
                            android:id="@+id/edt_Add_Audio_Technology_Product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line_green"
                            android:padding="3dp"
                            android:hint="Nhập..."
                            android:textColor="@color/black_600"
                            android:textSize="13.5dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Thêm thông tin"
                    android:textColor="@color/black_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:background="@drawable/bg_line_green"
                    android:textStyle="normal"
                    android:layout_weight="1"
                    android:textSize="13.5dp"
                    android:textColor="@color/black_600"
                    android:hint="Nhập..." />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/shape_green_dark_radiusbottom"
