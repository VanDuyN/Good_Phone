<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">>
        <RelativeLayout
            android:id="@+id/relativeLayout_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view_home"
                android:layout_toStartOf="@id/btn_Login"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:queryHint="Tìm kiếm"
                app:queryBackground="@null"
                app:iconifiedByDefault="false"
                android:background="@drawable/shape_search"
                android:textSize="18dp" />
            <Button
                android:background="@drawable/bg_line_black"
                android:backgroundTint="@color/green_dark"
                android:textColor="@color/white"
                android:id="@+id/btn_Login"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="Đăng nhập"
                android:textSize="19dp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/relativeLayout_s"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/green_light"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="Tất cả"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnViewAllProduct"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >>"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_home_All"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/green_light"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="IPhone"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnViewAllIPhone"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >>"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_home_Iphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/green_light"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="Xiaomi"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnViewAllXiaomi"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >>"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_home_Xiaomi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/green_light"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="SamSung"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnViewAllSamSung"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >>"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_home_Samsung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/green_light"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="OPPO"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnViewAllOPPO"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >>"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_home_OPPO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/green_light"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="Khác"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnViewAllOther"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >>"
                        android:textSize="17dp"
                        android:textAllCaps="false"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_home_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nevigation_bar">
    </FrameLayout>
</RelativeLayout>