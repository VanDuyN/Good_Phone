<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:id="@+id/relativeLayout_Cart"
    android:background="@drawable/bg_line_green">
    <CheckBox
        android:id="@+id/radio_item_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_toRightOf="@id/radio_item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_Product_Cart"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/line_grey_light"/>
        <LinearLayout
            android:id="@+id/infoItemCart"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_Name_Product_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="--"
                android:textColor="@color/black_700"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/tv_Price_Product_Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="700"
                android:textSize="18dp"
                android:textColor="@color/green_dark"
                android:text="--"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="end">
            <ImageButton
                android:id="@+id/btn_Delete_Product_Cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:src="@drawable/ic_delete"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <Button
                    android:id="@+id/btn_decrease_cart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green_dark"
                    android:background="@drawable/bg_line_green"
                    android:text="+"/>
                <TextView
                    android:id="@+id/tv_Quantity_Product_Cart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="1"
                    android:background="@drawable/line_grey_light"/>
                <Button
                    android:id="@+id/btn_increase_Cart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green_dark"
                    android:background="@drawable/bg_line_green"
                    android:text="-"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>