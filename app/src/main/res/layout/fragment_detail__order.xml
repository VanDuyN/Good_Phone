<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_200"
    tools:context=".fragment.Detail_Order">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:background="@color/green_light"
            android:padding="20dp">
            <TextView
                android:id="@+id/mini_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng: "
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Đang chờ xác nhận"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_order"/>
            </LinearLayout>
        </LinearLayout>
        <TableLayout
            android:id="@+id/tbl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/title">
            <TableRow
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="Thời gian đặt hàng"/>
                <TextView
                    android:id="@+id/tvBookingDate"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:text="00-00-0000 00:00"/>
            </TableRow>
            <TableRow
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="Thời gian xác nhận"/>

                <TextView
                    android:id="@+id/tvConfirmationDate"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="end"
                    android:text="00-00-0000 00:00" />
            </TableRow>
            <TableRow
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="Thời gian nhận hàng"/>
                <TextView
                    android:id="@+id/tvReceivedDate"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:text="00-00-0000 00:00"/>
            </TableRow>
        </TableLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/black_300"
            android:layout_below="@id/tbl_time"/>
        <LinearLayout
            android:id="@+id/ln_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/line">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận hàng"
                    android:textColor="@color/black_800"
                    android:textStyle="bold"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/tvNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
                <TextView
                    android:id="@+id/tvPhoneNumberUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
                <TextView
                    android:id="@+id/tvAddressUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_below="@id/ln_Address"
            android:background="@color/black_300"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/line1"/>
        <TableLayout
            android:id="@+id/tbl_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/list_product">
            <TableRow
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="Tổng tiền hàng"/>
                <TextView
                    android:id="@+id/tvSumPrice"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:text="1 000 000đ"/>
            </TableRow>
            <TableRow
                android:paddingLeft="5dp">
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="Tổng tiền phí vận chuyển"/>
                <TextView
                    android:id="@+id/tvPriceShipping"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:text="15 000đ"/>
            </TableRow>
            <TableRow
                android:paddingLeft="5dp">
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="Thành tiền"
                    android:textSize="17dp"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:id="@+id/tvSumMoney"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:text="1 000 000đ"
                    android:textSize="17dp"
                    android:textColor="@color/green_dark"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:id="@+id/ln_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:layout_below="@id/tbl_price">
            <Button
                android:id="@+id/btnRating"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_line_green"
                android:backgroundTint="@color/green_dark"
                android:text="Đánh giá"
                android:textSize="16dp"
                android:visibility="gone"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnExit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_line_green"
                android:backgroundTint="@color/green_dark"
                android:text="Thoát"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>