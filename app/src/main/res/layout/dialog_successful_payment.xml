<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/line_grey_light"
    android:backgroundTint="@color/black_200">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@drawable/ic_done"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt hàng thành công!"
            android:textStyle="bold"
            android:textSize="22dp"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/black_600" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="Mã đơn hàng"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:text="NCDHF126213"
                    android:textColor="@color/black_800"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="Thời gian đặt hàng"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:text="01-11-2023 15:12"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="Số điện thoại"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:text="0123456789"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="Tên người nhận"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:text="tên"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center_vertical"
                    android:text="Địa chỉ nhận hàng"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="end"
                    android:text="123 Sư Vạn Hạnh phường 12 Quận 10, Tp HCM"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="Tổng tiền đơn hàng"
                    android:textColor="@color/black_800"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:text="12 000đ"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:background="@drawable/bg_line_green"
            android:backgroundTint="@color/green_dark"
            android:text="Tiếp tục mua hàng"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>